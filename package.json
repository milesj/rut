{
  "name": "rut-root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn run type",
    "clean": "rm -rf packages/*/{*.tsbuildinfo,lib}",
    "coverage": "yarn run jest --coverage",
    "coverage:open": "open ./coverage/lcov-report/index.html",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "release": "lerna publish",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run clean && yarn test",
    "pretest": "yarn run type",
    "test": "yarn run coverage",
    "posttest": "yarn run eslint"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.0.0",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-is": "^16.7.1",
    "@types/react-test-renderer": "^16.9.2",
    "conventional-changelog-beemo": "^1.6.0",
    "lerna": "^3.20.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true,
      "react": true
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ],
      "testEnvironment": "node",
      "timers": "real"
    },
    "prettier": {
      "ignore": [
        "CHANGELOG.md"
      ]
    }
  }
}
